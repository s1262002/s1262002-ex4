#include <stdio.h>
#include <time.h>
 
int main()
{
    int h = 0;
    int t = 0;
    
    srand(time(NULL));
    printf("Tossing a coin...\n");
    for(int i = 1; i <= 3; i++){
        printf("Round %d: ", i );
        if (rand()%2 == 0){
            printf("Heads\n");
            head++;
        }else{
            printf("Tails\n");
            tail++;
        }
    }
    printf("Heads: %d, Tails: %d\n", h, t);
    
    if(head < tail) printf("You lost");
    else printf("You won");
    
    return 0;
}
